<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
	
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="Event Name"
	        android:singleLine="true" />
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:hint="Description" />
	    
	    <EditText
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="How are you associated with this event" />
	    
	    <Button 
	        android:text="Advertising Start Date"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <Button 
	        android:text="Advertising End Date"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <Button 
	        android:text="Advertising End Time"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <Button 
	        android:text="Optional Settings"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/gauchospace_upload_event_optional_button"/>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dip"
	        android:visibility="gone"
	        android:orientation="vertical">
	        
		    <Button 
		        android:text="Event Start Date"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <Button 
		        android:text="Event Start Time"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <Button 
		        android:text="Category"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <TextView
		        android:text=""
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" />
		    
		    <EditText
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:hint="URL (including http://)" />
		    
		    <Button 
		        android:text="Choose Image"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <CheckBox 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:checked="true"
		        android:text=" I own this photo and grant UCSB permission to display it" />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="8dip"
	        android:orientation="horizontal">
	        
	        
		    <Button 
		        android:layout_weight="1"
		        android:text="Cancel"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
		    
		    <Button 
		        android:layout_weight="1"
		        android:text="Submit"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"/>
	    </LinearLayout>
    </LinearLayout>
</ScrollView>